.section-wrapper
  .navigation-wrapper
    .button-group
      button(@click='changeType(0)', :class='{"active": type==0}') 全部
      button(@click='changeType(1)', :class='{"active": type==1}') Bug
      button(@click='changeType(2)', :class='{"active": type==2}') 需求
  .section-content
    .matrix-wrapper
      TodoMItem(:isImportant='true', :isUrgent='true', direction='left')
      TodoMItem(:isImportant='true', :isUrgent='false', direction='right')
    .matrix-wrapper
      TodoMItem(:isImportant='false', :isUrgent='true', direction='left')
      TodoMItem(:isImportant='false', :isUrgent='false', direction='right')
  TodoEdit.todoEdit-wrapper.right(v-if='direction === "right"', :curPost='curPost', :page='$route.name', :class='{"isEdit": isEdit}')
  TodoEdit.todoEdit-wrapper(v-else, :curPost='curPost', :page='$route.name', :class='{"isEdit": isEdit}')
